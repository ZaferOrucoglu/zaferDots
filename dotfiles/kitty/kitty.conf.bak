# =============================================================================
# KITTY CONFIGURATION
# Theme: Kanagawa Dragon
# =============================================================================

# -----------------------------------------------------------------------------
# Fonts
# -----------------------------------------------------------------------------
# Font family. It is recommended to use a Nerd Font installed on your system.
# Ex: JetBrainsMono Nerd Font, FiraCode Nerd Font, etc.
font_family      JetBrainsMono Nerd Font
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size        11.0

# -----------------------------------------------------------------------------
# Window Layout & Appearance
# -----------------------------------------------------------------------------
# Window padding (for aesthetics)
window_padding_width 10

# Background opacity (important for Hyprland blur effects)
background_opacity 0.85

# Hide window decorations (title bar, etc.)
hide_window_decorations yes

# Disable "are you sure" prompt when closing window
confirm_os_window_close 0

# -----------------------------------------------------------------------------
# Cursor & Mouse
# -----------------------------------------------------------------------------
cursor_shape block
cursor_blink_interval 0.5
mouse_hide_wait 3.0

# Url style
url_style curly
detect_urls yes

# -----------------------------------------------------------------------------
# Terminal Bell
# -----------------------------------------------------------------------------
# Disable audio bell
enable_audio_bell no

# -----------------------------------------------------------------------------
# THEME
# -----------------------------------------------------------------------------
include ~/.config/kitty/themes/Matugen.conf
